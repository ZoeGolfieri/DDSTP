{{#partial "principal" }}
    <div class="contenedor">

        <div class="filter">
            <h3>Filtros:</h3>
            {{#if cerrado}}
            <a href="/comunidades?estadoIncidentes=RESUELTO" class="filtro">Cerrado</a>
            {{else}}
            <a href="/comunidades?estadoIncidentes=RESUELTO" class="filtro_desactivado">Cerrado</a>
            {{/if}}

            {{#if activo}}
            <a href="/comunidades?estadoIncidentes=ACTIVO" class="filtro">Abierto</a>
            {{else}}
            <a href="/comunidades?estadoIncidentes=ACTIVO" class="filtro_desactivado">Abierto</a>
            {{/if}}
            {{#if todos}}
                <a href="/comunidades" class="filtro">Todos</a>
            {{else}}
                <a href="/comunidades" class="filtro_desactivado">Todos</a>
            {{/if}}

        </div>

    {{#if ErrorIncidente}}
        <div class="mensajeError"> No se puede cerrar el incidente  </div>
    {{/if}}

        <div class="cards">
            <ul>
                {{#each incidentes}}
                    <div class='card_incidente'>
                        <li>
                            <div class="titulo_comunidad">
                                <h1>{{this.[0].[comunidad].[nombre]}}</h1>
                            </div>
                            <div class = "incidentes">
                                <ul class = "lista_horizontal">
                                    {{#each this}}
                                        <li>
                                            <div class = "incidente_card">
                                                <h2>Incidente: {{id_incidente}}<h2>
                                                <span>{{observaciones}}</span>
                                                <form method="POST" action="/incidentes/{{id_incidente}}/cerrar">
                                                    <button type="submit" class="boton_enviar">
                                                        Cerrar
                                                    </button>
                                                </form>
                                            </div>
                                        </li>
                                    {{/each}}
                                </ul>
                            </div>
                        </li>
                    </div>
                {{/each}}
            </ul>
        </div>
    </div>

{{/partial}}

{{> layoutConBarra.html.hbs }}